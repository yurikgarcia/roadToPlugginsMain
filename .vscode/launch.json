{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to App.Backend (Kubernetes)",
      "type": "coreclr",
      "request": "attach",
      "processName": "App.Backend",
      "pipeTransport": {
        "pipeProgram": "kubectl",
        "pipeArgs": ["exec", "-i", "deploy/dev-helm-k8s-app", "--", "/bin/sh", "-c"],
        "debuggerPath": "/root/vsdbg/vsdbg",
        "pipeCwd": "${workspaceFolder}"
      },
      "sourceFileMap": {
        "/projects/helm-k8s-app/backend/App.Backend": "${workspaceFolder}/backend/App.Backend"
      }
    },
    {
      "name": "Launch Chrome for Frontend",
      "request": "launch",
      "type": "chrome",
      "url": "http://dev.localhost",
      "webRoot": "${workspaceFolder}/frontend"
    }
  ]
}
