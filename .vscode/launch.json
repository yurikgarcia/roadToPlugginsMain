{
    "compounds": [
      {
        "name": "Launch All",
        "configurations": ["ViteJS: Watch", "C#: App.Backend", "ViteJS: Dev", "Launch Chrome"]
      }
    ],
    "configurations": [
      {
        "name": ".NET Core Attach",
        "type": "coreclr",
        "request": "attach"
      },
      {
        "name": "ViteJS: Watch",
        "type": "node-terminal",
        "request": "launch",
        "command": "npm run watch",
        "cwd": "${workspaceFolder}\\frontend"
      },
      {
        "name": "C#: App.Backend",
        "type": "dotnet",
        "request": "launch",
        "projectPath": "${workspaceFolder}\\backend\\App.Backend\\App.Backend.csproj",
        "launchConfigurationId": "TargetFramework=;http",
      },
      {
        "name": "ViteJS: Dev",
        "type": "node-terminal",
        "request": "launch",
        "command": "npm run dev",
        "cwd": "${workspaceFolder}\\frontend"
      },
      {
        "name": "Launch Chrome",
        "request": "launch",
        "type": "chrome",
        "url": "http://localhost:8080",
        "webRoot": "${workspaceFolder}\\frontend"
      }
    ]
  }